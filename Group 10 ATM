class User:
    def __init__(self, username, email, password, status="active"):
        self.username = username
        self.email = email
        self.password = password
        self.status = status
    
    def update_status(self, new_status):
        if new_status in ["active", "suspended", "blocked"]:
            self.status = new_status
        else:
            print("Invalid status")

    def delete_account(self):
        self.status = "suspended"
        # Or you can set the status to "blocked" if you prefer.

# Example usage:
user1 = User("user1", "user1@example.com", "password123")
print("User Status:", user1.status)  # Output: active

user1.delete_account()
print("User Status after soft deletion:", user1.status)  # Output: suspended

# Update status
user1.update_status("blocked")
print("Updated User Status:", user1.status)  #Â Output:Â blocked
